# CoachMic Backend Environment Variables
# Copy this file to .env for local development

# Application
APP_NAME=CoachMic
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Google Cloud Platform
GCP_PROJECT_ID=your-firebase-project-id
GCP_LOCATION=us-central1

# Google AI Studio API Key (free tier - recommended for local development)
# Get yours at: https://aistudio.google.com/app/apikey
GCP_API_KEY=your-google-ai-studio-api-key

# Cloud Storage (optional - for resume file storage)
# Create a bucket at: https://console.cloud.google.com/storage/browser
# GCS_BUCKET_NAME=your-bucket-name

# Gemini Model Configuration
# Using gemini-2.5-flash for all tasks (higher free tier limits than pro)
GEMINI_MODEL=gemini-2.5-flash
GEMINI_MODEL_RESUME_PARSE=gemini-2.5-flash
GEMINI_MODEL_RESUME_PARSE_BASIC=gemini-2.5-flash
GEMINI_MODEL_RESUME_PARSE_CAREER=gemini-2.5-flash
GEMINI_MODEL_ATS_SCORE=gemini-2.5-flash
GEMINI_MODEL_RESUME_IMPROVE=gemini-2.5-flash
GEMINI_MODEL_COVER_LETTER=gemini-2.5-flash
GEMINI_MODEL_TEXT_INTERVIEW=gemini-2.5-flash
GEMINI_MODEL_FEEDBACK=gemini-2.5-flash
GEMINI_MODEL_TRANSCRIPT=gemini-2.5-flash

# Firebase Admin SDK (required for authentication)
# 1. Go to Firebase Console → Project Settings → Service accounts
# 2. Click "Generate new private key" and download the JSON file
# 3. Save the file to the backend/ folder
# 4. Set the path below (relative to backend/ folder)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_ADMIN_KEY_PATH=firebase-admin-key.json

# ElevenLabs (optional - for voice interviews)
# Get your API key at: https://elevenlabs.io/
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_AGENT_ID=your-agent-id

# JSearch API (optional - for job search feature)
# Get your API key at: https://rapidapi.com/letscrape-6bRBa3QguO5/api/jsearch
JSEARCH_API_KEY=your-jsearch-api-key

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Upload
MAX_UPLOAD_SIZE=5242880
