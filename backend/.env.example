# CoachMic Backend Environment Variables
# Copy this file to .env for local development

# Application
APP_NAME=CoachMic
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8080

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Google Cloud Platform
GCP_PROJECT_ID=your-project-id
GCP_LOCATION=us-central1
GCS_BUCKET_NAME=coachmic-uploads

# Vertex AI / Gemini - Default model used for all tasks unless overridden
GEMINI_MODEL=gemini-2.5-flash

# Task-specific model overrides (optional)
# Leave blank to use GEMINI_MODEL for all tasks
# Available models: gemini-2.5-pro, gemini-2.5-flash, gemini-2.5-flash-lite, gemini-2.0-flash
#
# Pro models: Best quality, slower, most expensive - use for critical tasks
# Flash models: Good balance of speed/quality - recommended for most tasks
# Lite models: Fastest, cheapest - use for simple/high-volume tasks
#
# Recommended configuration:
GEMINI_MODEL_RESUME_PARSE=gemini-2.5-pro       # Pro for accurate resume extraction
GEMINI_MODEL_RESUME_IMPROVE=gemini-2.5-pro     # Pro for high-quality rewriting
GEMINI_MODEL_ATS_SCORE=gemini-2.5-flash        # Flash for ATS scoring
GEMINI_MODEL_GAP_ANALYSIS=gemini-2.5-flash     # Flash for gap analysis
GEMINI_MODEL_TRANSCRIPT=gemini-2.0-flash       # Lighter model for transcript analysis
GEMINI_MODEL_FEEDBACK=gemini-2.5-flash         # Flash for interview feedback

# ElevenLabs
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_AGENT_ID=your-agent-id

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Upload
MAX_UPLOAD_SIZE=5242880
